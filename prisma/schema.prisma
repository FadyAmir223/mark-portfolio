generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  COMMERCIAL
  RESIDENTIAL
}

enum Locale {
  AR
  EN
}

model Project {
  id        String        @id @default(cuid())
  type      Type
  localized ProjectI18n[]

  name   String   @unique
  video  String?
  images String[]
  order  String
}

model ProjectI18n {
  id     String @id @default(cuid())
  locale Locale

  title       String
  description String?

  Project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String?

  @@unique([projectId, locale])
}

model Contact {
  id      String @id @default(cuid())
  phone   String
  message String
}
