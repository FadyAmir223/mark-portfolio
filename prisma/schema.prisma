generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  COMMERCIAL
  RESIDENTIAL
}

enum Locale {
  AR
  EN
}

model Project {
  id        String        @id @default(cuid())
  type      Type
  localized ProjectI18n[]

  name   String
  video  String
  images String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectI18n {
  id     String @id @default(cuid())
  locale Locale

  title       String @unique
  description String

  Project   Project? @relation(fields: [projectId], references: [id])
  projectId String?

  @@unique([projectId, locale])
}
